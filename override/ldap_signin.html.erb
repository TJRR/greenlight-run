<div class="container">
    <div class="row pt-7">
        <div class="col-6 offset-lg-3 text-center">          
            <%= form_for(:session, url: ldap_callback_path, html: {class: 'form-inline row'}) do |f| %>
                <div class="form-group row w-100 mt-2">
                    <h1 class="col-12" style="margin-bottom: 1em; font-weight: bold"> Acesso </h1>
                </div>

                <div class="form-group row w-100 mt-2">
                    <%= f.label :username, t("administrator.users.table.username"), class: "col-2 justify-content-end font-weight-bold h4" %>
                    <div class="col-10">
                        <%= f.text_field :username, class: "form-control w-100", value: "" %>
                    </div>
                </div>

                <div class="form-group row w-100 mt-2">
                    <%= f.label :password, t("password"), class: "col-2 justify-content-end font-weight-bold h4" %>
                    <div class="col-10">
                        <%= f.password_field :password, class: "form-control w-100", value: "" %>
                    </div>
                </div>

                <div class="form-group row w-100 mt-4">
                    <%= f.submit t("login"), class: "btn btn-primary btn-block signin-button col-2 offset-5" %>
                </div>

                <div class="form-group row w-100 mt-2">
                    <div class="col-12 justify-content-center">
                        <a href="https://www.google.com/url?q=http://intranet.tjrr.jus.br/index.php/serv-mudar-senhas&sa=D&ust=1563324263453000&usg=AFQjCNFfkiXxfLQ2ZeYrrHHf3ivXQe1Ayw">
                            Esqueceu o seu usu√°rio ou senha?
                        </a>
                    </div>
                </div>
                
            <% end %>
        </div>
    </div>
</div> 